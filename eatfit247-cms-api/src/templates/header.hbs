<style type="text/css">

  .header-container {
    width: 100%;
    font-size: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #393939;
  }

  .header-info {
    display: grid;
    column-gap: 10px;
    grid-template-columns: auto auto;
    align-items: center;
    padding-left: 20px;
  }

  .img-logo {
    width: 40px;
    height: 40px;
  }

  .contact-info {
    text-align: right;
    padding-right: 20px;
  }
</style>

<header style="width:100%;">
  <div class="header-container">
    <div class="header-info">
      <div>
        <span style="font-size: 12px; font-weight: 600">{{companyName}}</span><br>
        {{addressObj.postalAddress}}<br>
        {{addressObj.cityVillage}}, {{addressObj.state}}<br>
        {{addressObj.country}}, {{addressObj.pinCode}}
      </div>
    </div>
    <div class="contact-info">
      <span style="font-size: 16px; font-weight: 600">Invoice</span><br>
      {{contactNumber}} <br>
      {{emailId}}
    </div>
  </div>
</header>
