<style type="text/css">

  .header-container {
    width: 100%;
    font-size: 10px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    color: #393939;
  }

  .header-info {
    display: grid;
    column-gap: 10px;
    grid-template-columns: 120px auto;
    align-items: center;
    padding-left: 20px;
  }

  .img-logo {
    width: 120px;
    height: 50px;
  }

  .contact-info {
    text-align: right;
    padding-right: 20px;
  }
</style>

<header style="width:100%;">
  <div class="header-container">
    <div class="header-info">
      <div class="img-logo">
        {{#each imagePath}}
          {{img webUrl "img-logo"}}
        {{/each}}
      </div>
    </div>
    <div class="contact-info">
      <span style="font-size: 12px; font-weight: 600">{{companyName}}</span><br>
      {{addressObj.postalAddress}}<br>
      {{addressObj.cityVillage}}, {{addressObj.state}},
      {{addressObj.country}}, {{addressObj.pinCode}} <br>
      {{contactNumber}} / {{emailId}}
    </div>
  </div>
</header>
