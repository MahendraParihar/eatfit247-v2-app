  <tbody>
  <tr>
    <td style='width:30%;'>
      <div class='recipe-img'>
        <div class='image-container'>
          {{#each imagePath}}
      {{img webUrl "img"}}
    {{/each}}
        </div>
        <div>{{title}}</div>
      </div>
    </td>
    <td style='width:70%;'>
      <div>{{{ingredients}}}</div>
    </td>
  </tr>
  <tr>
    <td colspan='2'>
      <div>{{{preparationMethod}}}</div>
    </td>
  </tr>
  </tbody>
</table>-->
  {{/each}}
{{/if}}
</body>

</html>
