FROM node:22-alpine AS build
RUN apk add --no-cache g++ make python3 py3-pip chromium curl
WORKDIR /home/app
COPY ./eatfit247-cms-api/package*.json ./eatfit247-cms-api/
COPY ./eatfit247-cms-api ./eatfit247-cms-api
RUN npm --prefix eatfit247-cms-api install --legacy-peer-deps
RUN npm --prefix eatfit247-cms-api run build

FROM node:22-alpine AS production
RUN apk add --no-cache chromium curl
WORKDIR /home/app
COPY --from=build /home/app/eatfit247-cms-api/dist ./eatfit247-cms-api/dist
COPY --from=build /home/app/eatfit247-cms-api/node_modules ./eatfit247-cms-api/node_modules
COPY --from=build /home/app/eatfit247-cms-api/package*.json ./eatfit247-cms-api/
# Copy initialization script
COPY ./infra/init-media-dirs.sh /home/app/init-media-dirs.sh
RUN chmod +x /home/app/init-media-dirs.sh
# Create assets directory for Docker volume mounting
RUN mkdir -p /home/app/assets
EXPOSE 3000
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:3000/api/v1/health || exit 1
CMD ["sh", "-c", "/home/app/init-media-dirs.sh && node eatfit247-cms-api/dist/main.js"]
